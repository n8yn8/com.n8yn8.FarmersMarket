<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.n8yn8.farmersmarket"
    android:versionCode="3"
    android:versionName="1.2.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:name="ParseApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDmCxro9R9UuxHj5skxTOqy9Wk9smENS7Y" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.n8yn8.farmersmarket.parse.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MarketsMap"
            android:label="@string/title_activity_find_markets"
            android:parentActivityName=".MarketList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.n8yn8.farmersmarket.MarketList" />
        </activity>
        <activity
            android:name=".parse.MarketsMap"
            android:label="@string/title_activity_find_markets"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.n8yn8.farmersmarket.MainActivity" />
        </activity>
        <activity
            android:name=".Inventory"
            android:label="@string/title_activity_inventory"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.n8yn8.farmersmarket.MainActivity" />
        </activity>
        <activity
            android:name=".EditMarket"
            android:label="@string/title_activity_new_market" >
        </activity>
        <activity
            android:name=".parse.EditMarket"
            android:label="@string/title_activity_new_market" >
        </activity>
        <activity
            android:name=".parse.ShopMarket"
            android:label="@string/title_activity_shop_market"
            android:parentActivityName=".MarketList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.n8yn8.farmersmarket.MarketList" />
        </activity>
        <activity
            android:name=".parse.GroceryList"
            android:label="@string/title_activity_grocery_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.n8yn8.farmersmarket.MainActivity" />
        </activity>
        <activity
            android:name=".EditItem"
            android:label="@string/title_activity_add_item" >
        </activity>
        <activity
            android:name=".parse.EditItem"
            android:label="@string/title_activity_add_item" >
        </activity>
        <activity
            android:name=".EditVendor"
            android:label="@string/title_activity_edit_vendor" >
        </activity>
        <activity
            android:name=".parse.EditVendor"
            android:label="@string/title_activity_edit_vendor" >
        </activity>
        <activity
            android:name=".MarketList"
            android:label="@string/title_activity_market_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.n8yn8.farmersmarket.MainActivity" />
        </activity>
        
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
